// Place your settings in this file to overwrite the default settings
{

  // editor
  "editor.selectionHighlight": false,
  "editor.formatOnType": true,
  "editor.snippetSuggestions": "top",
  "editor.dragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": true,
  "editor.formatOnPaste": true,
  "editor.fontFamily": "Inconsolata-dz for Powerline",
  "editor.fontSize": 12,
  "editor.rulers": [
    80
  ],
  "editor.tabSize": 2,
  "editor.scrollBeyondLastLine": false,
  "editor.wordWrap": "off",
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "all",

  // workbench
  "workbench.colorTheme": "Chester Atom",
  "workbench.iconTheme": "vscode-icons",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#3c3c3c",
    "editor.lineHighlightBackground": "#252527",
    "editorLineNumber.foreground": "#3C3C3C",
    "terminal.ansiBlack": "#1E1E1E",
    "terminal.ansiBrightBlack": "#AAA",
    "terminal.ansiRed": "#CD9179",
    "terminal.ansiGreen": "#CD9179",
    "terminal.ansiBrightGreen": "#5F8B4E",
    "terminal.ansiYellow": "#5F8B4E",
    "terminal.ansiBrightYellow": "#DCDBAB",
    "terminal.ansiBrightRed": "#DCDBAB",
    "terminal.ansiBlue": "#5A9DD4",
    "terminal.ansiBrightBlue": "#669ACC",
    "terminal.ansiMagenta": "#C488BE",
    "terminal.ansiBrightMagenta": "#C488BE",
    "terminal.ansiCyan": "#9DDCFB",
    "terminal.ansiBrightCyan": "#9DDCFB",
    "terminal.ansiWhite": "#D4D4D4",
    "terminal.ansiBrightWhite": "#D4D4D4"
  },

  // window
  "window.newWindowDimensions": "maximized",
  "window.title": "${rootPath}${separator}${activeEditorShort}",
  "window.zoomLevel": 0.9,

  // github
  "git.path": "/Users/tdunn/github",

  // files
  "files.trimTrailingWhitespace": false,
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true
  },
  "explorer.openEditors.visible": 0,

  // formating
  "html.format.endWithNewline": true,

